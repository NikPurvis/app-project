{% layout 'layout.liquid' %}
{% block content %}

<div class="container-md">
    <img class="logo" src="/../bre-logo2.png" />

    <div class="row">
        <div class="col-auto setlist-head">
            Add Song to Music Library
        </div>
    </div>

    <div class="song-new-wrap col-md-10">
        <form action="/songs/create" method="POST">

            <div class="row justify-content-between">
                <div class="col-md-5">
                    <label class="form-label" for="title">
                        Song:
                    </label>
                    <input type="text"
                        class="form-label"
                        name="title"
                        placeholder="ex: Life on Mars?">
                </div>
                <div class="col-md-5">
                    <label class="form-label" for="artist">
                        Artist:
                    </label>
                    <input type="text"
                        class="form-label"
                        name="artist"
                        placeholder="ex: David Bowie">
                </div>
            </div>

            <div class="row justify-content-between">
                <div class="col-md-5">
                    <label class="form-label" for="year">
                        Year:
                    </label>
                    <input type="text"
                        class="form-label"
                        name="year"
                        placeholder="ex: 1971">
                </div>
                <div class="col-md-5">
                    <label class="form-label" for="genre">
                        Genre:
                    </label>
                    <input type="text"
                        class="form-label"
                        name="genre"
                        placeholder="ex: Glam">
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-5">
                    Position (check all playable):
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="Vocals" name="position[]" value="Vocals">
                        <label class="form-check-label" for="Vocals">Vocals</label>
                    </div>
                        
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="Duet" name="position[]" value="Duet">
                        <label class="form-check-label" for="Duet">Duet</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="Harmonies" name="position[]" value="Harmonies">
                        <label class="form-check-label" for="Harmonies">Harmonies</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="Guitar" name="position[]" value="Guitar">
                        <label class="form-check-label" for="Guitar">Guitar</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="Bass" name="position[]" value="Bass">
                        <label class="form-check-label" for="Bass">Bass</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="Drums" name="position[]" value="Drums">
                        <label class="form-check-label" for="Drums">Drums</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="Keys" name="position[]" value="Keys">
                        <label class="form-check-label" for="Keys">Keys</label>
                    </div>
                </div>
            </div>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <input class="btn song-add-button" type="submit" value="Add song to library">
            </div>
        </form>
        </div>
    </div>
</div>

    </div>
</div>

{% endblock %}
